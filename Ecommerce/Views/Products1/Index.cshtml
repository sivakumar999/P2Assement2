@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <h1>Best Laptops Here<img src="~/images/hp.png" width="60%" height="70%" /></h1>

    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 border-0 shadow" style="background-color: #f8f9fa;">
                    <div class="card-body d-flex flex-column">
                        <!-- Add the image here -->
                        <img src="@Url.Content(@product.ImageUrl)" alt="@product.Name" class="card-img-top" />
                        <div class="mt-auto">
                            <h5 class="card-title text-center">@product.Name</h5>
                            <p class="card-text text-center">by <b>@product.Price</b></p>
                            <p class="card-text text-center">As low as: <span>@product.Price.ToString("c")</span></p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary mt-2 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


